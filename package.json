{
    "name": "norbert-toth",
    "description": "norbert-toth.me, my personal website",
    "version": "1.0.0",
    "author": "Norbert TÃ³th <hello@norbert-toth.me>",
    "browserslist": [
        "last 2 Chrome versions",
        "last 2 ChromeAndroid versions",
        "last 2 Edge versions",
        "last 2 Firefox versions",
        "last 2 ios_saf versions",
        "last 2 Safari versions"
    ],
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all"
    },
    "scripts": {
        "build": "gatsby build",
        "cleanup": "rm yarn.lock; rm package-lock.json; rm -rf node_modules",
        "develop": "gatsby develop",
        "format": "prettier --write 'src/**/*.js'",
        "lint:css": "stylelint './src/**/*.jsx'",
        "lint:js": "eslint --fix --ext '.jsx,.js' './src/**/*'",
        "precommit": "lint-staged",
        "reboot": "npm run cleanup; npm install",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "lint-staged": {
        "*.{css,scss}": "stylelint",
        "*.{js,jsx}": [
            "eslint --fix"
        ]
    },
    "dependencies": {
        "gatsby": "next",
        "gatsby-plugin-react-helmet": "next",
        "react": "^16.4.1",
        "react-dom": "^16.4.1",
        "react-helmet": "^5.2.0"
    },
    "devDependencies": {
        "babel-eslint": "^8.2.6",
        "eslint": "^5.2.0",
        "eslint-config-airbnb": "^17.0.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-compat": "^2.5.1",
        "eslint-plugin-import": "^2.13.0",
        "eslint-plugin-jsx-a11y": "^6.1.1",
        "eslint-plugin-react": "^7.10.0",
        "eslint-plugin-unicorn": "^4.0.3",
        "husky": "^0.14.3",
        "imagemin-lint-staged": "^0.3.0",
        "lint-staged": "^7.2.0",
        "prettier": "^1.13.7",
        "stylelint": "^9.3.0",
        "stylelint-config-standard": "^18.2.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-no-unsupported-browser-features": "^3.0.1",
        "stylelint-order": "^0.8.1",
        "stylelint-processor-styled-components": "^1.3.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nygdjs/norbert-toth.me"
    }
}
